#include <stdio.h>

int main() {
    int a[100], n, count = 0;
    int *ptr, *end;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter elements:\n");
    for(int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }

    ptr = a;          // pointer to first element
    end = a + n;      // pointer to last position

    while(ptr < end) {
        count++;
        ptr++;
    }

    printf("Number of elements = %d", count);

    return 0;
}
