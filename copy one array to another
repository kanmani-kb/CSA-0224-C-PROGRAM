#include <stdio.h>

int main() {
    int a[100], b[100], n, i;
    int *ptr1, *ptr2;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter elements of first array:\n");
    for(i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }

    ptr1 = a;  // pointer to first array
    ptr2 = b;  // pointer to second array

    for(i = 0; i < n; i++) {
        *(ptr2 + i) = *(ptr1 + i);
    }

    printf("Copied array elements:\n");
    for(i = 0; i < n; i++) {
        printf("%d ", *(ptr2 + i));
    }

    return 0;
}
