#include <stdio.h>

int main() {
    int a[100], n, i;
    int *ptr, max;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter elements:\n");
    for(i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }

    ptr = a;        // pointer points to first element
    max = *ptr;     // assume first element is largest

    for(i = 1; i < n; i++) {
        if(*(ptr + i) > max) {
            max = *(ptr + i);
        }
    }

    printf("Largest number = %d", max);

    return 0;
}
